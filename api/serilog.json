{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:u}] [{Level:u3}] [{SourceContext}] [{RequestPath}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "FileX",
        "Args": {
          "path": "Logs/",
          "outputTemplate": "[{Timestamp:u}] [{Level:u3}] [{SourceContext}] [{RequestPath}] {Message}{NewLine}{Exception}",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 90
        }
      }
    ],
    "Enrich": [
      "FromLogContext"
    ],
    "Properties": {
      "Application": "minimal_api_test"
    }
  },
  "AllowedHosts": "*"
}
